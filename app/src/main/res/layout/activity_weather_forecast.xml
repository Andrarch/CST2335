<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.androidlabs.WeatherForecast">

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:src="@android:drawable/btn_default" />

    <TextView
        android:id="@+id/weatherCurTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/weatherImage"

        android:text="TextView" />
    <TextView
        android:id="@+id/weatherMinTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherCurTemp"
        android:layout_toRightOf="@id/weatherImage"
        android:text="TextView" />
    <TextView
        android:id="@+id/weatherMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherMinTemp"
        android:layout_toRightOf="@id/weatherImage"
        android:text="TextView" />
    <TextView
        android:id="@+id/weatherWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherMaxTemp"
        android:layout_toRightOf="@id/weatherImage"
        android:text="TextView" />

    <ProgressBar
        android:id="@+id/weatherProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/weatherImage"
        android:visibility="invisible" />

</RelativeLayout>
